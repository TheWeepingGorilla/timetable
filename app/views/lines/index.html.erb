<h1>Lines</h1>

<ul>
  <% @lines.each do |line| %>
    <%= link_to "#{line.name}", line_path(line), :class=> "btn btn-default btn-sm" %>
  <% end %>
</ul>

<%= link_to "New Line", new_line_path, :class=> "btn btn-success" %>
<%= link_to "Stops", stops_path, :class=> "btn btn-info" %>
<%= link_to "Stations", stations_path, :class=> "btn btn-warning" %>
