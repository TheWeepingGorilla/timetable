<h1>Stations</h1>

<ul>
  <% @stations.each do |station| %>
    <%= link_to "#{station.name}", station_path(station), :class=> "btn btn-default btn-sm" %>
  <% end %>
</ul>

<%= link_to "New Station", new_station_path, :class=> "btn btn-success" %>
<%= link_to "Lines", lines_path, :class=> "btn btn-danger" %>
<%= link_to "Stops", stops_path, :class=> "btn btn-info" %>
