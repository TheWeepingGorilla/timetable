<h1><%= @station.name %></h1>
<ul>
  <% @stops.each do |stop| %>
    <%= link_to "#{stop.find_line.name} - #{stop.time}", edit_stop_path(stop), :class=> "btn btn-default btn-sm" %>
  <% end %>
</ul>
<%= link_to "Edit Station", edit_station_path(@station), :class=> "btn btn-success" %>

<%= link_to "Delete", station_path(@station),
                         :data => {:confirm => "You sure?",
                                   :method => "delete"},
                         :class => "btn btn-danger" %>
