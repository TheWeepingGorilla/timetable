<%= form_for(@stop) do |f| %>
  <div class="form-group">
    <%= f.label "Station:" %>
    <%= f.collection_select :station_id, Station.all, :id, :name %>
  </div>
    <span><strong> connects to </strong></span>
  <div class="form-group">
    <%= f.label "Line:" %>
    <%= f.collection_select :line_id, Line.all, :id, :name %>
  </div>
  <div class="form-group">
  <%= f.label :time %>
  <%= f.text_field :time %>
  </div>
  <%= f.submit(:class => "btn btn-danger") %>
<% end %>
